<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/func_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorBg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/func_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:gravity="center_horizontal"
            android:text="信息查看"
            android:textColor="@color/colorBlack33"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/func_integral"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:gravity="center_horizontal"
            android:text="运行操作"
            android:textColor="@color/colorBlack33"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/func_payment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:gravity="center_horizontal"
            android:text="报告查询"
            android:textColor="@color/colorBlack33"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/func_invite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:gravity="center_horizontal"
            android:text="定值整定"
            android:textColor="@color/colorBlack33"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/main_tab5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:gravity="center_horizontal"
            android:text="调试菜单"
            android:textColor="@color/colorBlack33"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/main_tab6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:gravity="center_horizontal"
            android:text="装置设定"
            android:textColor="@color/colorBlack33"
            android:textSize="12sp" />
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorBg" />


</LinearLayout>